{{#each blogposts as |post|}}

<section class="card" id="post-{{post.id}}">
    <section class="card-header d-flex justfiy-content-between">
        <p>{{post.title}} </p>
        <p>{{post.user.username}} </p>
        <p>{{format_date post.date_created}}</p>
    </section>

    <section class="card-body">
        {{post.content}}
    </section>

</section>

{{/each}}

<script src="./js/blogpost.js"></script>