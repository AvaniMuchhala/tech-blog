{{!-- Dashboard with existing blog posts by user --}}
{{log this}}

<section class="blog-section d-flex flex-column">
    {{#if creatingPost}}
        {{> create-post}}
    {{else}}
        {{> post-partial}}
        <button>+ New Post</button>
    {{/if}}
</section>

{{!-- Conditionally render script based on whether user clicked on new post button --}}
{{#if creatingPost}}
<script src="./js/create-post.js"></script>
{{else}}
<script src="./js/dashboard.js"></script>
{{/if}}
